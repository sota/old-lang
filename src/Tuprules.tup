CFLAGS += -Wall
CFLAGS += -Werror
CFLAGS += -O0
CFLAGS += -std=c11
CFLAGS += -g

CXXFLAGS += -Wall
CXXFLAGS += -Werror
CXXFLAGS += -O2
CXXFLAGS += -std=c++11

!r2c = |> ragel/ragel/ragel %f -o %B.c |> %B.c
!cc = |> gcc $(CFLAGS) -I../ -c %f -o %o |> %B.o
!++ = |> g++ $(CXXFLAGS) -I../ -c %f -o %o |> %B.o
!ar = |> ar crs %o %f |> lib%B.a
